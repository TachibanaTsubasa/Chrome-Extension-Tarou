{
  "manifest_version": 3,
  "name": "Tarou",
  "version": "1.3.6",
  "description": "extension for gbf",
  "icons": {
    "16": "./assets/icon-16.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  },
  "permissions": ["storage", "unlimitedStorage", "tabs", "notifications", "debugger", "webRequest", "contextMenus"],
  "host_permissions": [
    "*://*.granbluefantasy.jp/*",
    "*://gbf.game.mbga.jp/*",
    "*://waaatanuki.github.io/gbf-app/*",
    "*://waaatanuki.gitee.io/gbf-app/*",
    "*://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.granbluefantasy.jp/*",
        "*://gbf.game.mbga.jp/*",
        "*://waaatanuki.github.io/gbf-app/*",
        "*://waaatanuki.gitee.io/gbf-app/*",
        "*://localhost/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Tarou",
    "default_popup": "src/views/popup/main.html",
    "default_icon": {
      "16": "./assets/icon-16.png",
      "48": "./assets/icon-48.png",
      "128": "./assets/icon-128.png"
    }
  },
  "minimum_chrome_version": "99"
}
